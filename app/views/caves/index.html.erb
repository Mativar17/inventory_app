<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Artículos de Café</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Artículo</th>
        <th>SKU</th>
        <th>Valor neto unitario</th>
        <th>Stock inicial</th>
        <th>Maquina sl</th>
        <th>Maquina primerpiso</th>
        <th>Maquina segundopiso</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @caves.each do |cafe| %>
        <tr>
          <td><%= cafe.name %></td>
          <td><%= cafe.sku %></td>
          <td><%= cafe.valor_neto_unitario %></td>
          <td><%= cafe.stock_inicial %></td>
          <td><%= cafe.maquina_sl %></td>
          <td><%= cafe.maquina_primerpiso %></td>
          <td><%= cafe.maquina_segundopiso %></td>
          <td><%= link_to 'Show', cafe %></td>
          <td><%= link_to 'Edit', edit_cafe_path(cafe) %></td>
          <td><%= link_to 'Destroy', cafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Cafe', new_cafe_path %>

</div>
